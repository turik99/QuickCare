<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ProviderResultsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/providerList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterCardExpandable" />

    <com.alespero.expandablecardview.ExpandableCardView
        app:title="Filter"
        app:inner_view="@layout/innerlayout"
        android:animateLayoutChanges="true"
        android:backgroundTint="#E2E2E2"
        android:id="@+id/filterCardExpandable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:expandOnClick="true"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


    </com.alespero.expandablecardview.ExpandableCardView>
</android.support.constraint.ConstraintLayout>