<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ProviderResultsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/providerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterCardExpandable" />

    <com.alespero.expandablecardview.ExpandableCardView
        android:elevation="4dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/filterCardExpandable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:animateLayoutChanges="true"
        android:backgroundTint="#E2E2E2"
        app:expandOnClick="true"
        app:inner_view="@layout/innerlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Sort">


    </com.alespero.expandablecardview.ExpandableCardView>
</androidx.constraintlayout.widget.ConstraintLayout>